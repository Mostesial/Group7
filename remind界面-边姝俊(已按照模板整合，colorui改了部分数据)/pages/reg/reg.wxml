<!--pages/reg/reg.wxml-->
<view animation="{{animationData1}}">
<image class='redC' src='/images/index/redC.png'></image>
</view>
<view animation="{{animationData2}}">
<image class='pinkC1' src='/images/index/pinkC.png'></image>
</view>
<view animation="{{animationData3}}">
<image class='pinkC2' src='/images/index/pinkC.png'></image>
</view>
<view animation="{{animationData4}}">
<image class='purpleC' src='/images/index/purpleC.png'></image>
</view>
<view class="text">register</view> 
<view class="cu-form-group">
	<input placeholder="用户名或邮箱"  value="{{username}}" bindinput="inputUsername" ></input>
</view>
<view class="cu-form-group">
	<input placeholder="密码" value="{{password}}" bindinput="inputPassword"  ></input>
  <text class="cuIcon-attentionfill text-grey"></text>
</view>
<view class="cu-form-group">
	<input placeholder="昵称" value="{{minname}}" bindinput="inputMinname"  ></input>
</view>
<view class="cu-form-group">
	<picker bindchange="PickerChange" value="{{index}}" range="{{picker}}">
		<view class="picker">
			{{index?picker[index]:'中国大陆'}}
		</view>
	</picker>
</view>
<view class="padding flex flex-direction">
  <button class="cu-btn round lg bg-purple lg text-pink" bindtap="register" >register</button>
</view>	

<checkbox-group bindchange="checkboxChange">
      <label class="checkbox">
        <checkbox class="round yellow" value="cc" checked="{{checked}}" />  
      </label>  
      <text style="color:#333366" bindtap="agreement">   我已同意《幼鸟指南用户协议》 
      </text>    
</checkbox-group>
