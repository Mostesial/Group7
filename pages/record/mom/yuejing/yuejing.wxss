/* 下拉框组件属性============================== */
.list-msg {
    padding: 0 20rpx;
    background-color: #fff;
    position: relative;
}
 
.list-msg1 {
    height: 60rpx;
    display: flex;
    align-items: center;
    justify-content: space-between;
}
 
.list-msg .list-msg2 {
    height: 90rpx;
    width: 500rpx;
    display: flex;
    align-items: center;
    justify-content: space-between;
    border: 6rpx solid #ccc;
    border-radius: 50rpx;
    padding: 0 10rpx;
    position:relative;
}
 
.select_box {
    background-color: #ffffff;
    padding: 0 60rpx;
    width: 510rpx;
    position: absolute;
    top: 120rpx;
    z-index: 1;
    animation: myfirst 0.5s;
    border-radius: 50rpx;
    border: 3rpx solid #ccc;
    box-shadow: 2px 2px 2px 2px rgba(204, 204, 204, 0.582);
}

.select_one {
    height: 60rpx;
    line-height: 60rpx;
    display: flex;
    align-items: center;
    justify-content: center;
}