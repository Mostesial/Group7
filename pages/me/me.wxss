/* pages/me/me.wxss */
page{
  background-color: white;
}
.text{
  margin-left: 45%;
  margin-top: 20%;
  font-size: 25px;
  font-style: unset;
  font-weight: bolder;
  color:rgb(51,51,102);
  height: 50px;
}

.container{
  width: 100%;
  height: 200rpx;
  background-color:white;
  border-top: 3rpx solid #f5f5f5;
  border-bottom:5rpx solid #f5f5f5;
}
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #333366;
  font-weight: bolder;
}
.userinfo-avatar {
  overflow: hidden;
  width: 128rpx;
  height: 128rpx;
  margin-top: -90rpx;
  border-radius: 50%;
}

.content{
  background-color: white;
  padding-left: 75rpx;
  padding-right: 50rpx;
  border-bottom:3rpx solid #f5f5f5;
  display: flex;
  align-items: center;
}
.color1{
  color:#333366;
}
.color2{
  color: #777777;
}
.contact{
  display: flex;
  justify-content: space-between;
}