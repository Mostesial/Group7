  <image class='logo' src="/images/login/logo.png"></image>
  <view class='youngguide'>YOUNG GUIDE</view>
    <view class='zhanghao' >账号</view>
    <input value="{{username}}" bindinput="inputUsername" class="info-input"placeholder="请输入注册邮箱" placeholder-style='color=#999999' />
